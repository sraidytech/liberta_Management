// Real-time tracking of order confirmations via EcoManager webhooks
// ============================================================================

// Order Confirmation Model (Current State Only - No History)
model OrderConfirmation {
  id                    String   @id @default(cuid())
  
  // Link to Order (optional - order might not exist yet)
  orderId               String?  @unique
  order                 Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // EcoManager identifiers
  ecoManagerOrderId     Int      @unique
  orderReference        String
  storeIdentifier       String
  
  // Confirmator information
  confirmatorId         Int?
  confirmatorName       String?
  
  // Confirmation state
  confirmationState     String?  // e.g., "Confirmed", "Cancelled", "Pending"
  orderState            String?  // e.g., "Processing", "Shipped", "Delivered"
  
  // Timestamps
  confirmedAt           DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([ecoManagerOrderId])
  @@index([storeIdentifier])
  @@index([confirmatorId])
  @@index([confirmationState])
  @@index([confirmedAt])
  @@map("order_confirmations")
}

// Webhook Configuration Model (Per-Store Webhook Management)
model WebhookConfiguration {
  id                    String   @id @default(cuid())
  
  // Store identification
  storeIdentifier       String   @unique
  storeName             String
  
  // EcoManager webhook details
  ecoManagerWebhookId   Int?     // Webhook ID from EcoManager
  webhookSecret         String   // Secret for HMAC verification
  deliveryUrl           String   // Our webhook endpoint URL
  
  // Webhook events subscribed
  events                String[] // ["OrderCreated", "OrderConfirmationStatusChanged"]
  
  // Status
  isActive              Boolean  @default(true)
  lastTriggered         DateTime?
  
  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([storeIdentifier])
  @@index([isActive])
  @@map("webhook_configurations")
}
